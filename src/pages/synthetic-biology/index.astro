---
import { Image, Picture } from "@astrojs/image/components";

const { category, title, description, author, date, image } = Astro.props;


const allPosts = await Astro.glob("./*.mdx");
import MaxPostCard from "../../components/MaxPostCard.astro";


import MainLayout from "../../layouts/MainLayout.astro";
---
 
<MainLayout title="The Cooking">

	<div class="flex flex-col text-biz1 font-viz bg-slate-900 w-full h-full m-2 p-5">
		<div class="flex justify-between">
		<h1 class="text-4xl text-biz1">{title}</h1>
		<h2 class="text-3xl text-biz2">{description}</h2>
		</div>
		<div class="flex flex-row justify-around m-2 ">
			<Image
				src="/final-characters/b1.png"
				alt="fiz the science note"
				width={200}
				height={500}
				format="avif"
				quality={90}
				fit="cover"
			/>



			<div class="bg-black flex flex-col w-2/3 p-3 text-biz1 justify-between">
				<h1 class="text-6xl text-center ">Synthetic Biology</h1>
				<h4 class="text-xl">Making Bio less messy</h4>
				<h4 class="text-lg text-center">you could argue Synbio is messy too</h4>
				<h3 class="text-xl">But it has always focused on staying ethical, while A.I. has charged off to the event horizion of society.</h3>
				<h3 class="text-xl">Anyways, lets get some snazzy synbio know-how:</h3>

			</div>


	</div>

	<section class="bg-slate-900 p-7 m-7 flex-col flex flex-wrap justify-center">
        <h1 class="text-xl font-biz text-white">Posts</h1>
        <div class=" bg-slate-800 flex flex-wrap justify-evenly">
        {
            allPosts.map((post) => (
                <MaxPostCard frontmatter={post.frontmatter} url={post.url} />
            ))
        }
		
        </div>

    </section>




</MainLayout>


