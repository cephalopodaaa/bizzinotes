---
import { Image, Picture } from "@astrojs/image/components";

const { category, slug, title, description, author, date, image } = Astro.props;


const allPosts = await Astro.glob("./posts/*.mdx");
const sportPosts = allPosts.filter(post => post.frontmatter.category === 'sport' || (post.frontmatter.tags && post.frontmatter.tags.includes('sport')));

import MaxPostCard from "../components/MaxPostCard3.astro";


import MainLayout from "../layouts/MainLayout.astro";
---
 
<MainLayout title="The Sport" description="Higher, Further, Faster" note="wiz">

	<div class="flex flex-col text-wiz1 font-wiz w-full h-full m-2 p-2">
		<div class="flex justify-between">
		<h1 class="text-4xl text-wiz1">{title}</h1>
		<h2 class="text-3xl text-biz2">{description}</h2>
		</div>
		<div class="flex flex-row justify-around m-2 ">




			<div class="flex flex-col w-1/3 p-3 justify-around">
				<h1 class="text-6xl text-center "><span class="text-2xl font-biz">Welcome to <br></span>Wizzi Notes</h1>
			</div>
			
			
			<div class="flex flex-row justify-around m-2 ">
				<Image
				src="/final-characters/w1.png"
				alt="the wizziest of notes"
				width={300}
				height={550}
				format="avif"
				quality={90}
				fit="cover"
				/>
			</div>
		</div>
		<h2 class="text-xl text-center"> A place to get faster in all your sports! </h2>

	<section class="p-7 m-7 flex-col flex flex-wrap justify-center">
        <h1 class="text-xl font-wiz">wizzi tips:</h1>
        <div class="flex flex-wrap justify-evenly">
        {
            sportPosts.map((post) => (
                <MaxPostCard frontmatter={post.frontmatter} url={`/posts/${post.frontmatter.slug}`} />
            ))
        }
		
        </div>

    </section>




</MainLayout>


