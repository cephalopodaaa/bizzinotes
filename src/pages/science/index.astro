---
import { Image, Picture } from "@astrojs/image/components";

const { category, title, description, author, date, image } = Astro.props;

const allPosts = await Astro.glob("./*.md");
import MinPostCard from "../../components/MinPostCard.astro";

import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title="The Science">
  <div
    class=`flex flex-col text-biz1 font-biz w-full h-full m-2 p-5`
  >
    <div class="flex justify-between">
      <h1 class="text-4xl text-biz1">{title}</h1>
      <h2 class="text-3xl text-biz2">{description}</h2>
    </div>
    <div class="flex flex-row justify-center m-2">
      <div class="flex flex-col w-1/3 p-3 text-fiz1 font-fiz justify-between">

          <h2 class="text-2xl">So... you're here for</h2>
          <h1 class="text-6xl text-center ">some Science</h1>
          <h4 class="text-md text-right">good choice!</h4>
<br>
<h3 class="mt-2 text-lg text-left">This is:</h3>
<h3 class="mt-2 text-lg text-left">A place of Learning</h3>
<h3 class="mt-2 text-lg text-left">A place of Debate</h3>
        <h3 class="mt-2 text-lg text-center">
          In Science, Nothing is set in stone
        </h3>
        <h3 class="mt-2 text-lg text-center">
          But here are some pretty solid topics
        </h3>
        <h3 class="text-lg text-center">go on... dip your toe</h3>
        <h3 class="m-2 text-xs text-center">the water's cold and humbling</h3>
        <p class="text-base"></p>
      </div>
      <div class="flex flex-row justify-around">
        <Image
          src="/final-characters/f1.png"
          alt="fiz the science note"
          width={200}
          height={200}
          format="avif"
          quality={100}
          fit="cover"
          class="max-w-full h-auto md:w-96"
        />
      </div>
    </div>

    <section
      class="p-7 m-7 flex-column flex flex-wrap justify-center"
    >
      <h1 class="text-xl font-biz text-white">Level 1</h1>
      <div class="flex flex-wrap justify-evenly">
        {
          allPosts
            .filter((post) => post.frontmatter.level === 1)
            .map((post) => (
              <MinPostCard frontmatter={post.frontmatter} url={post.url} />
            ))
        }
      </div>
    </section>
  </div>
</MainLayout>
