---
import { Image, Picture } from "@astrojs/image/components";

const { category, title, description, author, date, image } = Astro.props;


const allPosts = await Astro.glob("./*.md");
import MinPostCard from "../../components/MinPostCard.astro";


import MainLayout from "../../layouts/MainLayout.astro";
---
 
<MainLayout title="The Science">

	<div class="flex flex-col text-biz1 bg-slate-700 font-biz w-full h-full m-2 p-5">
		<div class="flex justify-between">
		<h1 class="text-4xl text-biz1">{title}</h1>
		<h2 class="text-3xl text-biz2">{description}</h2>
		</div>
		<div class="flex flex-row justify-around m-2 ">
			<Image
				src="/final-characters/f1.png"
				alt="fiz the science note"
				width="200"
				aspectRatio="1:1"
				format="avif"
				quality={90}
				fit="cover"
				class="h-5/6"
			/>
			<div class="bg-black flex flex-col w-1/3 p-3 text-fiz1">
				<h2 class="text-2xl">Welcome to:</h2>
				<h1 class="text-4xl text-center ">The Science</h1>
				<h3 class="mt-2 text-lg text-left">A place of Learning</h3>
				<h3 class="mt-2 text-lg text-center">A place of Debate</h3>
				<h3 class="mt-2 text-lg text-right">In Science, Nothing is set in stone</h3>
				<h3 class="mt-2 text-lg text-center">But here are some pretty solid topics</h3>
				<h3 class="text-lg text-center">go on... dip your toe</h3>
				<h3 class="m-2 text-xs text-center">the water's cold and humbling</h3>
				<p class="text-base">
					
				</p>
			</div>
			<div class="flex flex-row justify-around m-2 ">
				<Image
					src="/final-characters/f1.png"
					alt="fiz the science note"
					width="200"
					aspectRatio="1:1"
					format="avif"
					quality={90}
					fit="cover"
					class="h-5/6"
				/>
		</div>

	</div>

	<section class="bg-slate-900 p-7 m-7 flex-column flex flex-wrap justify-center">
        <h1 class="text-xl font-biz text-white">Posts</h1>
        <div class=" bg-slate-300 flex flex-wrap justify-evenly">
        {
            allPosts.map((post) => (
                <MinPostCard frontmatter={post.frontmatter} url={post.url} />
            ))
        }
        </div>

    </section>




</MainLayout>


