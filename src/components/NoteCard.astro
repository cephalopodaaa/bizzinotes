---
import { Image, Picture } from "@astrojs/image/components";
import "../styles/global.css";
const { frontmatter, url } = Astro.props;

const { note, medium, slogan, drink, image, playlist } = frontmatter;
---

  <a href={url}
    class=`m-3 sm:w-1/2 md:w-1/3 xl:w-1/4 bg-black flex flex-row justify-around font-${note} text-white border-slate-700 rounded-2xl border-2 shadow-2xl`
  >
    <Image
      src={image.src}
      alt={note}
      width={300}
      aspectRatio="1:2"
      format="avif"
      quality={100}
      fit="cover"
      class="w-1/3"
    />

    <div
      class=`p-4 w-5/12 flex flex-col justify-center text-${note}1 grow`
    >
        <h2 class="text-4xl">{note}</h2>
        <h3 class="text-lg font-biz text-center">{slogan}</p>
        <div class="flex flex-row justify-between text-lg m-3">
          <h3 class="font-biz">Medium:</h3>
          <h3 class="text-lg text-right">{medium}</h3>
        </div>
        <div class="flex flex-row justify-between text-lg wrap m-3">
          <h3 class="font-biz">Fav Drink:</h3>
          <h3 class="text-lg text-right">{drink}</h3>
        </div>

    </div>
  </a>
