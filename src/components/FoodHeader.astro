---
import { Image, Picture } from "@astrojs/image/components";

const {
    category,
    title,
    slogan,
    note,
    date,
    image,
    playlist,
    description,
    statsarray,
    stat1,
    stat2,
    stat3,
    stat4,
    stat5,
    val1,
    val2,
    val3,
    val4,
    val5,
} = Astro.props;
---

<div class="flex flex-col text-biz1 bg-slate-700 font-biz w-full m-2 p-5">
    <div class="flex justify-between">
        <h1 class="text-4xl text-biz1">{title}</h1>
        <h2 class="text-3xl text-biz2">{slogan}</h2>
    </div>
    <div class="flex flex-row justify-around bg-yellow-400 m-2">

        <Image
            src={image.src}
            alt={image.alt}
            width={200}
            aspectRatio="6:7"
            format="avif"
            quality={100}
            fit="cover"
            class="shadow-2xl m-3 rounded-3xl flex shrink-0 grow-1"
        />


        <div class="flex justify-between flex-col bg-black m-5 p-5 rounded-xl shrink-1">
            <h2 class="text-3xl">{description}</h2>
            <iframe
            class="rounded-xl bg-slate-900 p-2"
            src={playlist}
            width="100%"
            height="522"
            frameborder="0px"
            allowfullscreen=""
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
            loading="lazy"></iframe>
        </div>

    </div>
    <div class="flex justify-around shrink-1">
        <a href={`/the-medium/${category}`} class="text-orange-300"
            >Category: {category}</a
        >
        <a href={`/the-notes/${note}`} class=`text-${note}1 hover:text-${note}2 text-lg`>more by {note}</a>
        <p>posted: {date}</p>
    </div>
</div>