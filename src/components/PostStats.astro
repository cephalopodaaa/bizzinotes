---
import { Image, Picture } from "@astrojs/image/components";

const { category, title, description, author, date, image } = Astro.props;
---

<div class="flex flex-col bg-slate-700 w-full m-2 p-5">
    <div class="flex flex-row justify-between bg-yellow-400 m-2 p-3">
        <div class="flex flex-col">
            <h1>{title}</h1>
        </div>
        <Image
            src={image.src}
            alt={image.alt}
            width="200"
            aspectRatio="1:1"
            format="avif"
            quality={90}
            fit="cover"
            class="shadow-2xl"
        />
    </div>
    <div class="bg-black flex flex-column justify-center">
        <h1>The Stats</h1>
        <!-- <script>
            theStats.map(...)
        </script> -->
    </div>
</div>
