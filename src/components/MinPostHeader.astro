---
import { Image, Picture } from "@astrojs/image/components";

const { category, title, description, author, date, image } = Astro.props;
---

<div class="flex flex-col text-biz1 bg-slate-700 font-biz w-full m-2 p-5">
    <div class="flex justify-between">
    <h1 class="text-4xl text-biz1">{title}</h1>
    <h2 class="text-3xl text-biz2">{description}</h2>
    </div>
    <div class="flex flex-row justify-around bg-yellow-400 m-2 ">
        <Image
            src={image.src}
            alt={image.alt}
            width="200"
            aspectRatio="auto"
            format="avif"
            quality={90}
            fit="cover"
            class="shadow-2xl"
        />
        <div class="bg-black flex flex-column justify-center">
            <h1>{author} Notes</h1>
            <a href={`/the-medium/${category}`} class="text-orange-300"
                >{category}</a
            >
            <a href={`/the-notes/${author}`} class="text-blue-300"
                >more by {author}</a
            >
            <p>posted: {date}</p>
        </div>
    </div>
</div>
