---
import MainLayout from "../layouts/MainLayout.astro";
import PostHeader from "../components/PostHeader.astro"

const { frontmatter } = Astro.props;
console.log(frontmatter); //This will be terminal of vscode

const { category, title, description, playlist, slogan, note, date, image, stat1, stat2, stat3, val1, val2, val3 } = frontmatter;
// saves it from being {frontmatter.title} ...ect

---

<MainLayout title={title} description={description}>
	<PostHeader  {title} {slogan} {date} {description} {category} {playlist} {image} {note} {stat1} {stat2} {stat3} {val1} {val2} {val3} />
    <div class=`flex flex-col justify-evenly bg-purple-300 text-blue-700 font-${note}`>
        <slot>*** blog text goes here ***</slot>
    </div>
</MainLayout>