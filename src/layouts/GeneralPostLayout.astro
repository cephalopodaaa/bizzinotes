---
import MainLayout from "./MainLayout.astro";
import FoodHeader from "../components/FoodHeader.astro";
import { Image, Picture } from "@astrojs/image/components";


const { frontmatter } = Astro.props;
// console.log(frontmatter); //This will be terminal of vscode

const { category, title, slogan, note, date, image, description, foodimage, playlist, statsarray, stat1, stat2, stat3, val1, val2, val3 } = frontmatter;
// saves it from being {frontmatter.title} ...ect

---

<MainLayout title={title} description={slogan} note={note}>
	<FoodHeader {title} {slogan} {date} {category} {playlist} {description} {image} {note} {statsarray} {stat1} {stat2} {stat3} {val1} {val2} {val3} />
    <div class=`m-1 p-2 flex flex-col md:flex-row justify-evenly rounded-xl`>
        <div class="flex-grow flex-shrink-0 m-1 p-2 bg-yellow-400 rounded-3xl">
                <h1 class="text-2xl">The {category}</h1>
                <slot>we ain't figured out this post yet</slot>
            </div>
            <Image
                src={foodimage.src}
                alt={foodimage.alt}
                height= {400}
                aspectRatio="5:6"
                format="avif"
                quality={100}
                fit="cover"
                class="m-3 rounded-2xl flex-shrink"
        />
    </div>
</MainLayout>