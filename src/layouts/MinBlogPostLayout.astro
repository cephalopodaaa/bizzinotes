import MinPostHeader from "../components/MinPostHeader.astro"

const { frontmatter } = Astro.props;
console.log(frontmatter); //This will be terminal of vscode

const { category, title, description, slogan, note, date, image} = frontmatter;
// saves it from being {frontmatter.title} ...ect

---

